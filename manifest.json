{
    "manifest_version": 2,
    "name": "Yad2 Ad Promoter",
    "version": "0.1.2",
    "description": "Promoting your Yad2 posts easily",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png",
        "16": "icons/icon16.png"
    },
    "browser_action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "sources/default_popup.html"
    },
    "permissions": [
        "cookies",
        "https://*.yad2.co.il/*"
    ],
    "background": {
        "scripts": ["sources/jquery-3.2.2.min.js", "sources/moment.min.js", "sources/moment-timezone-with-data.min.js", "sources/yad2_utils.js", "sources/background.js"]
    }
}
